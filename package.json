    "lint": "eslint ./src/*.ts",
    "peer": "node ./cjs/bin/updatePeerDependencies.js",
    "prepublishOnly": "run-s clean compile prettify peer",
    "prettify": "prettier --config ./.prettierrc.js --write './{cjs,esm}/**/*.{js,ts}'"

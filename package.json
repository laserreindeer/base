{
  "name": "@vangware/vangstyle",
  "description": "Vangware shared styles, linting and formating",
  "version": "1.3.1",
  "author": {
    "name": "Vangware",
    "url": "https://vangware.com"
  },
  "bugs": {
    "url": "https://github.com/vangware/vangstyle/issues"
  },
  "devDependencies": {
    "@types/node": "^12.0.8",
    "@types/prettier": "^1.16.4",
    "@types/stylelint": "^9.10.0",
    "npm-run-all": "^4.1.5",
    "postcss": "^7.0.17",
    "prettier": "^1.18.2",
    "rimraf": "^2.6.3",
    "stylelint": "^10.1.0",
    "stylelint-config-standard": "^18.3.0",
    "stylelint-order": "^3.0.0",
    "tslib": "^1.10.0",
    "tslint": "^5.17.0",
    "tslint-config-prettier": "^1.18.0",
    "typescript": "^3.5.2"
  },
  "files": [
    "/cjs",
    "/esm",
    "/.editorconfig",
    "/.gitignore",
    "/package-lock.json",
    "/pnpm-lock.yaml",
    "/tslint.json",
    "/yarn.lock"
  ],
  "homepage": "https://github.com/vangware/vangstyle#readme",
  "keywords": [
    "format",
    "linting",
    "settings",
    "style",
    "vangstyle",
    "vangware"
  ],
  "license": "MIT",
  "main": "./cjs/index.js",
  "module": "./esm/index.js",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/vangware/vangstyle.git"
  },
  "scripts": {
    "clean": "rimraf ./{cjs,esm}",
    "compile": "run-s compile:*",
    "compile:cjs": "tsc --project ./tsconfig.cjs.json",
    "compile:esm": "tsc --project ./tsconfig.esm.json",
    "prepublishOnly": "run-s clean compile:* prettify:*",
    "prettify": "run-s prettify:*",
    "prettify:cjs": "prettier --config ./prettier.config.js --write './cjs/**/*.{js,ts}'",
    "prettify:esm": "prettier --config ./prettier.config.js --write './esm/**/*.{js,ts}'"
  },
  "source": "./src/index.ts",
  "types": "./esm/index.d.ts"
}

{
  "name": "@vangware/base",
  "description": "Vangware shared styles, linting and formatting",
  "version": "2.0.3",
  "author": {
    "name": "Vangware",
    "url": "https://vangware.com"
  },
  "bin": {
    "prettify-esm": "cjs/bin/prettifyESM.js",
    "vangware": "cjs/bin/index.js"
  },
  "bugs": {
    "url": "https://github.com/vangware/base/issues"
  },
  "dependencies": {
    "husky": "^4.2.5",
    "prompts": "^2.3.2"
  },
  "devDependencies": {
    "@types/eslint": "^7.2.2",
    "@types/minimist": "^1.2.0",
    "@types/node": "^14.6.4",
    "@types/prettier": "^2.1.0",
    "@types/prompts": "^2.0.8",
    "@types/stylelint": "^9.10.1",
    "@typescript-eslint/eslint-plugin": "^4.0.1",
    "@typescript-eslint/parser": "^4.0.1",
    "eslint": "^7.8.1",
    "eslint-config-prettier": "^6.11.0",
    "eslint-import-resolver-node": "^0.3.4",
    "eslint-plugin-ban": "^1.5.1",
    "eslint-plugin-functional": "^3.0.2",
    "eslint-plugin-import": "^2.22.0",
    "eslint-plugin-no-null": "^1.0.2",
    "eslint-plugin-prefer-arrow": "^1.2.2",
    "eslint-plugin-prettier": "^3.1.4",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.1.1",
    "rimraf": "^3.0.2",
    "stylelint": "^13.7.0",
    "stylelint-config-prettier": "^8.0.2",
    "stylelint-order": "^4.1.0",
    "stylelint-prettier": "^1.1.2",
    "typescript": "^4.0.2"
  },
  "files": [
    ".vscode/",
    "cjs/",
    "configurations/",
    "esm/"
  ],
  "homepage": "https://github.com/vangware/base#readme",
  "husky": {
    "hooks": {
      "pre-commit": "run-s clean compile lint"
    }
  },
  "keywords": [
    "base",
    "eslint",
    "eslintconfig",
    "format",
    "linting",
    "prettier",
    "settings",
    "style",
    "stylelint",
    "vangware"
  ],
  "license": "MIT",
  "main": "./cjs/index.js",
  "module": "./esm/index.js",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/vangware/base.git"
  },
  "scripts": {
    "clean": "rimraf ./{cjs,esm}",
    "compile": "run-s compile:*",
    "compile:cjs": "tsc --project ./tsconfig.json",
    "compile:esm": "tsc --project ./tsconfig.esm.json",
    "lint": "eslint ./src/*.ts",
    "prepublishOnly": "run-s clean compile prettify",
    "prettify": "run-s prettify:*",
    "prettify:esm": "node ./cjs/bin/prettifyESM.js ./esm",
    "prettify:prettier": "prettier --config ./.prettierrc.js --write './{cjs,esm}/**/*.{js,ts}'"
  },
  "source": "./src/index.ts",
  "types": "./cjs/index.d.ts"
}

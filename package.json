{
  "name": "@vangware/base",
  "description": "Vangware shared styles, linting and formatting",
  "version": "3.0.4",
  "author": {
    "name": "Vangware",
    "url": "https://vangware.com"
  },
  "bin": {
    "vangware": "./cjs/bin/index.js"
  },
  "bugs": {
    "url": "https://github.com/vangware/base/issues"
  },
  "dependencies": {
    "prompts": "^2.4.0"
  },
  "devDependencies": {
    "@types/eslint": "^7.2.4",
    "@types/minimist": "^1.2.0",
    "@types/node": "^14.14.6",
    "@types/prettier": "^2.1.5",
    "@types/prompts": "^2.0.9",
    "@types/stylelint": "^9.10.1",
    "@typescript-eslint/eslint-plugin": "^4.6.0",
    "@typescript-eslint/parser": "^4.6.0",
    "eslint": "^7.12.1",
    "eslint-config-prettier": "^6.15.0",
    "eslint-import-resolver-node": "^0.3.4",
    "eslint-plugin-ban": "^1.5.1",
    "eslint-plugin-functional": "^3.1.0",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-no-null": "^1.0.2",
    "eslint-plugin-prefer-arrow": "^1.2.2",
    "eslint-plugin-prettier": "^3.1.4",
    "husky": "^4.3.0",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.1.2",
    "rimraf": "^3.0.2",
    "stylelint": "^13.7.2",
    "stylelint-config-prettier": "^8.0.2",
    "stylelint-order": "^4.1.0",
    "stylelint-prettier": "^1.1.2",
    "typescript": "^4.0.5"
  },
  "exports": {
    ".": {
      "import": "./esm/index.js",
      "require": "./cjs/index.js"
    }
  },
  "files": [
    ".vscode",
    "cjs",
    "configurations",
    "esm"
  ],
  "homepage": "https://github.com/vangware/base#readme",
  "husky": {
    "hooks": {
      "pre-commit": "run-s clean compile lint"
    }
  },
  "keywords": [
    "base",
    "eslint",
    "eslintconfig",
    "format",
    "linting",
    "prettier",
    "settings",
    "style",
    "stylelint",
    "vangware"
  ],
  "license": "MIT",
  "main": "./cjs/index.js",
  "module": "./esm/index.js",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/vangware/base.git"
  },
  "scripts": {
    "clean": "rimraf ./{cjs,esm}",
    "compile": "run-s compile:*",
    "compile:cjs": "tsc --project ./tsconfig.json",
    "compile:esm": "tsc --project ./tsconfig.esm.json",
    "lint": "eslint ./src/*.ts",
    "prepublishOnly": "run-s clean compile prettify",
    "prettify": "prettier --write './{cjs,esm}/**/*.{js,ts}'"
  },
  "source": "./src/index.ts",
  "types": "./cjs/index.d.ts"
}
